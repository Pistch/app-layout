{
  "extends": "@gravity-ui/tsconfig",
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "importsNotUsedAsValues": "error",
    "noUncheckedIndexedAccess": true,
    "experimentalDecorators": false,
    "resolveJsonModule": true,
    "outDir": "dist/esm"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["**/__tests__", "**/*.test.ts"]
}
